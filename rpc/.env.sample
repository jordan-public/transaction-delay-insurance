# RPC Proxy Configuration Sample
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# Network Configuration (choose one: zircuit, flow, hedera)
NETWORK=zircuit

# Zircuit Testnet Configuration
ZIRCUIT_RPC_URL=https://zircuit1-testnet.p2pify.com/
ZIRCUIT_CHAIN_ID=48899
ZIRCUIT_NETWORK_NAME=Zircuit Testnet

# Flow EVM Testnet Configuration
FLOW_RPC_URL=https://testnet.evm.nodes.onflow.org/
FLOW_CHAIN_ID=545
FLOW_NETWORK_NAME=Flow EVM Testnet

# Hedera EVM Testnet Configuration
HEDERA_RPC_URL=https://testnet.hashio.io/api
HEDERA_CHAIN_ID=296
HEDERA_NETWORK_NAME=Hedera Testnet

# Signing Configuration
# WARNING: Use test mnemonic for development only!
# Replace with your actual mnemonic in production
SIGNING_MNEMONIC=test test test test test test test test test test test junk
SIGNING_ACCOUNT_INDEX=0

# Optional: Direct private key (overrides mnemonic if provided)
# PRIVATE_KEY=your_private_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Transaction Cache Configuration
CACHE_CLEANUP_INTERVAL_MS=3600000
MAX_CACHE_AGE_MS=86400000
